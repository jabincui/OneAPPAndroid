<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LifeServiceActivity">

    <com.oneapp.oneappandroidapp.view.ImgTxtButton
        android:id="@+id/btn_DDCX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/dd"
        android:text="滴滴出行"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_GDDT"
        app:layout_constraintTop_toTopOf="parent" />

    <com.oneapp.oneappandroidapp.view.ImgTxtButton
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/btn_GDDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/btn_DDCX"
        app:layout_constraintEnd_toStartOf="@id/btn_MORE_1"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/gd"
        android:text="高德地图" />

    <com.oneapp.oneappandroidapp.view.ImgTxtButton
        android:id="@+id/btn_MORE_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/favicon"
        android:text="更多"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn_GDDT"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>