<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VolunteerDashboardActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.alipay.mobile.antui.basic.AUButton
                    android:id="@+id/btn_select_date"
                    android:text="请选择日期"
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                </com.alipay.mobile.antui.basic.AUButton>

                <DatePicker
                    android:id="@+id/date_picker"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="AAChart demo"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.oneapp.oneappandroidapp.AAChartCoreLib.AAChartCreator.AAChartView
                    android:id="@+id/line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                </com.oneapp.oneappandroidapp.AAChartCoreLib.AAChartCreator.AAChartView>

                <TextView
                    android:text="AnyChart for Android demo"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.anychart.AnyChartView
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">
                </com.anychart.AnyChartView>

                <TextView
                    android:text="MPAndroidChart demo"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/mp_line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                </com.github.mikephil.charting.charts.LineChart>

                <com.oneapp.oneappandroidapp.AAChartCoreLib.AAChartCreator.AAChartView
                    android:id="@+id/column_chart"
                    android:layout_width="match_parent"
                    android:layout_height="350dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginTop="10dp"
                    app:contentPadding="10dp"
                    android:elevation="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.oneapp.oneappandroidapp.view.ImgTxtButton
                            android:id="@+id/vd_btn_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/knowledgebank"
                            android:text="查看志愿者工作日志"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/btn_2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.oneapp.oneappandroidapp.view.ImgTxtButton
                            android:id="@+id/btn_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/knowledgebank"
                            android:text="指定志愿者岗位调动"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toEndOf="@id/vd_btn_1"
                            app:layout_constraintEnd_toStartOf="@id/btn_3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.oneapp.oneappandroidapp.view.ImgTxtButton
                            android:id="@+id/btn_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/knowledgebank"
                            android:text="推荐志愿者岗位调动"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toEndOf="@id/btn_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

<!--                        <com.alipay.mobile.antui.basic.AUButton-->
<!--                            android:text="查看志愿者工作日志"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content">-->

<!--                        </com.alipay.mobile.antui.basic.AUButton>-->

<!--                        <com.alipay.mobile.antui.basic.AUButton-->
<!--                            android:text="指定志愿者岗位调动"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content">-->

<!--                        </com.alipay.mobile.antui.basic.AUButton>-->

<!--                        <com.alipay.mobile.antui.basic.AUButton-->
<!--                            android:text="推荐志愿者岗位调动"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content">-->

<!--                        </com.alipay.mobile.antui.basic.AUButton>-->

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>





    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>